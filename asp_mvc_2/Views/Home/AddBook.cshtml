@model asp_mvc_2.Models.ViewModel.AddBook

@{
    ViewBag.Title = "Tambah Data Buku";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tambah Data Buku</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.judul, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.judul, new { htmlAttributes = new
            { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.judul, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ISBN, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ISBN, new { htmlAttributes = new
            { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ISBN, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.penulis, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.penulis, new { htmlAttributes = new
            { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.penulis, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.penerbit, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.penerbit, new { htmlAttributes = new {
            @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.penerbit, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.tahun, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.tahun, new { htmlAttributes = new {
            @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tahun, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.stok, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.stok, new { htmlAttributes = new {
            @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.stok, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Tambah Buku" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @if(ViewBag.message != null) {
        <h4 style="color:red">@ViewBag.message</h4>
        <br />
    }
</div>

<div>
    @Html.ActionLink("Back to Main", "Index","Home")
</div>